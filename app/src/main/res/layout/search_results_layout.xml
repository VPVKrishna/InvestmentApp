<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding">

    <EditText
        android:id="@+id/etQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Query here" />

    <EditText
        android:id="@+id/etTableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter tableName here"
        android:text="cust_detail_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cust_detail_info cust_account_info period_info week_line_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnShowResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowResults" />

        <Button
            android:id="@+id/btnExportResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExportResults" />
    </LinearLayout>

    <WebView
        android:id="@+id/wvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

</LinearLayout>